---
import { availablePlugins, initPlugins } from "@lib/cms/plugins";
import type { Plugin } from "@lib/cms/types";
import { i18n } from "@lib/i18n";
import { loadConfig } from "@lib/cms/config";

// Initialize plugins to check which are enabled
await initPlugins();

const config = await loadConfig();
const currentLocale = config.language || "en";
const t = await i18n.getT(currentLocale);

// Check if contact-form plugin is enabled
const contactFormEnabled =
  availablePlugins.find((p: Plugin) => p.id === "contact-form")?.enabled ??
  false;

interface MenuItem {
  label: string;
  href?: string;
  icon: string;
  children?: MenuItem[];
}

const menuItems: MenuItem[] = [
  { label: t("Dashboard"), href: "/admin", icon: "dashboard" },
  { label: t("Posts"), href: "/admin/posts", icon: "posts" },
  { label: t("Pages"), href: "/admin/pages", icon: "pages" },
  { label: t("Media"), href: "/admin/media", icon: "media" },
  { label: t("Categories"), href: "/admin/categories", icon: "categories" },
  // Conditionally add Forms menu if plugin is enabled
  ...(contactFormEnabled
    ? [{ label: t("Forms"), href: "/admin/forms", icon: "forms" }]
    : []),
  { label: t("Users"), href: "/admin/users", icon: "users" },
  { label: t("Custom Fields"), href: "/admin/field-groups", icon: "fields" },
  {
    label: t("Appearance"),
    icon: "appearance",
    children: [
      { label: t("Themes"), href: "/admin/appearance/themes", icon: "themes" },
      { label: t("Menu"), href: "/admin/appearance/menus", icon: "menu" },
    ],
  },
  { label: t("Plugins"), href: "/admin/plugins", icon: "plugins" },
  { label: t("Translations"), href: "/admin/translations", icon: "translate" },
  { label: t("Settings"), href: "/admin/settings", icon: "settings" },
];

const icons: Record<string, string> = {
  dashboard: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />`,
  posts: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />`,
  pages: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />`,
  media: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />`,
  categories: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />`,
  forms: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 3v4a1 1 0 001 1h4" />`,
  users: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />`,
  fields: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z" />`,
  appearance: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z" />`,
  themes: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />`,
  menu: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />`,
  plugins: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 14v6m-3-3h6M6 10h2a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v2a2 2 0 002 2zm10 0h2a2 2 0 002-2V6a2 2 0 00-2-2h-2a2 2 0 00-2 2v2a2 2 0 002 2zM6 20h2a2 2 0 002-2v-2a2 2 0 00-2-2H6a2 2 0 00-2 2v2a2 2 0 002 2z" />`,
  translate: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 11.37 9.188 15.287 5.75 18.067" />`,
  settings: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />`,
  chevron: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />`,
};

const currentPath = Astro.url.pathname;

function isItemActive(item: MenuItem): boolean {
  if (item.href) {
    return (
      currentPath === item.href ||
      (item.href !== "/admin" && currentPath.startsWith(item.href))
    );
  }
  if (item.children) {
    return item.children.some((child) => isItemActive(child));
  }
  return false;
}
---

<aside
  class="w-64 h-screen bg-slate-900 border-r border-slate-800 fixed left-0 top-0 flex flex-col"
>
  <div class="p-4 border-b border-slate-800">
    <a href="/" class="flex items-center gap-3">
      <div
        class="w-10 h-10 rounded-xl bg-gradient-to-br from-emerald-500 to-cyan-500 flex items-center justify-center"
      >
        <svg
          class="w-6 h-6 text-white"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
      </div>
      <div>
        <span class="text-lg font-bold text-slate-100 block">EZ CMS</span>
        <span class="text-xs text-slate-500">Admin Panel</span>
      </div>
    </a>
  </div>

  <nav class="flex-1 p-4 overflow-y-auto">
    <ul class="space-y-1">
      {
        menuItems.map((item) => {
          const isActive = isItemActive(item);
          const hasChildren = item.children && item.children.length > 0;

          if (hasChildren) {
            return (
              <li>
                <button
                  class:list={[
                    "submenu-toggle flex items-center justify-between w-full gap-3 px-3 py-2.5 rounded-lg transition-all duration-200",
                    isActive
                      ? "bg-emerald-500/10 text-emerald-400"
                      : "text-slate-400 hover:text-slate-100 hover:bg-slate-800/50",
                  ]}
                  data-submenu={item.label.toLowerCase()}
                >
                  <div class="flex items-center gap-3">
                    <svg
                      class="w-5 h-5"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                      set:html={icons[item.icon]}
                    />
                    <span class="font-medium text-sm">{item.label}</span>
                  </div>
                  <svg
                    class:list={[
                      "w-4 h-4 transition-transform duration-200 submenu-chevron",
                      isActive ? "rotate-180" : "",
                    ]}
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    set:html={icons.chevron}
                  />
                </button>
                <ul
                  class:list={[
                    "submenu ml-4 mt-1 space-y-1 overflow-hidden transition-all duration-200",
                    isActive ? "max-h-96" : "max-h-0",
                  ]}
                  data-submenu-list={item.label.toLowerCase()}
                >
                  {item.children?.map((child) => {
                    const childActive =
                      child.href &&
                      (currentPath === child.href ||
                        (child.href !== "/admin" &&
                          currentPath.startsWith(child.href)));
                    return (
                      <li>
                        <a
                          href={child.href}
                          class:list={[
                            "flex items-center gap-3 px-3 py-2 rounded-lg transition-all duration-200",
                            childActive
                              ? "bg-emerald-500/10 text-emerald-400 border border-emerald-500/20"
                              : "text-slate-400 hover:text-slate-100 hover:bg-slate-800/50",
                          ]}
                        >
                          <svg
                            class="w-4 h-4"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            set:html={icons[child.icon]}
                          />
                          <span class="font-medium text-sm">{child.label}</span>
                        </a>
                      </li>
                    );
                  })}
                </ul>
              </li>
            );
          }

          return (
            <li>
              <a
                href={item.href}
                class:list={[
                  "flex items-center gap-3 px-3 py-2.5 rounded-lg transition-all duration-200",
                  isActive
                    ? "bg-emerald-500/10 text-emerald-400 border border-emerald-500/20"
                    : "text-slate-400 hover:text-slate-100 hover:bg-slate-800/50",
                ]}
              >
                <svg
                  class="w-5 h-5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  set:html={icons[item.icon]}
                />
                <span class="font-medium text-sm">{item.label}</span>
              </a>
            </li>
          );
        })
      }
    </ul>
  </nav>

  <div class="p-4 border-t border-slate-800">
    <a
      href="/"
      class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-400 hover:text-slate-100 hover:bg-slate-800/50 transition-all duration-200"
    >
      <svg
        class="w-5 h-5"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
        ></path>
      </svg>
      <span class="font-medium text-sm">View Site</span>
    </a>
  </div>
</aside>

<script>
  document.querySelectorAll(".submenu-toggle").forEach((toggle) => {
    toggle.addEventListener("click", () => {
      const submenuName = (toggle as HTMLElement).dataset.submenu;
      const submenuList = document.querySelector(
        `[data-submenu-list="${submenuName}"]`,
      );
      const chevron = toggle.querySelector(".submenu-chevron");

      if (submenuList) {
        submenuList.classList.toggle("max-h-0");
        submenuList.classList.toggle("max-h-96");
      }

      if (chevron) {
        chevron.classList.toggle("rotate-180");
      }
    });
  });
</script>
