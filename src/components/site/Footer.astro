---
import { getConfig } from "../../lib/cms/config";
import { getDatabase } from "../../lib/cms/database";
import { i18n } from "../../lib/i18n";

const config = getConfig();
const currentYear = new Date().getFullYear();

const db = await getDatabase();
const menus = await db.getMenus();

const currentLocale = await i18n.getLocale(Astro.request);
const t = await i18n.getT(currentLocale);

// Try to find a menu named "Footer Menu" or "Quick Links"
const footerMenu = menus.find(
  (m) =>
    m.name.toLowerCase() === "footer menu" ||
    m.name.toLowerCase() === "quick links",
);

let quickLinks = [
  { label: t("Blog"), href: "/blog" },
  { label: t("About"), href: "/about" },
  { label: t("Admin Panel"), href: "/admin" },
];

if (footerMenu) {
  try {
    const items =
      typeof footerMenu.items === "string"
        ? JSON.parse(footerMenu.items)
        : footerMenu.items;

    if (Array.isArray(items) && items.length > 0) {
      quickLinks = items.map((item: any) => ({
        label: item.label,
        href: item.url,
      }));
    }
  } catch (e) {
    console.error("Failed to parse footer menu items:", e);
  }
}
