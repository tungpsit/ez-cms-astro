---
import { getCollection, getEntry, render } from "astro:content";
import SiteLayout from "../../layouts/SiteLayout.astro";
import { initPlugins, processContent } from "../../lib/cms/plugins";
import { formatDateString, readingTime } from "../../lib/cms/utils";

await initPlugins();

const { slug } = Astro.params;

if (!slug) {
  return Astro.redirect("/404");
}

const post = await getEntry("posts", slug);

if (!post) {
  return Astro.redirect("/404");
}

const { Content } = await render(post);

const allPosts = await getCollection("posts", ({ data }) => !data.draft);
const relatedPosts = allPosts
  .filter((p) => p.id !== post.id && p.data.category === post.data.category)
  .slice(0, 2);
---

<SiteLayout
  title={post.data.title}
  description={post.data.description}
  image={post.data.featuredImage}
>
  <article class="max-w-4xl mx-auto px-4 sm:px-6 py-12">
    <header class="mb-8">
      <div class="flex items-center gap-3 mb-4">
        <a
          href="/blog"
          class="text-slate-400 hover:text-emerald-400 transition-colors"
        >
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
        </a>
        <span class="text-slate-600">/</span>
        <span
          class="px-3 py-1 rounded-full bg-emerald-500/10 text-emerald-400 text-sm font-medium"
        >
          {post.data.category}
        </span>
      </div>

      <h1
        class="text-3xl md:text-4xl lg:text-5xl font-bold text-slate-100 mb-4"
      >
        {post.data.title}
      </h1>

      {
        post.data.description && (
          <p class="text-xl text-slate-400 mb-6">{post.data.description}</p>
        )
      }

      <div class="flex items-center gap-4 text-sm text-slate-500">
        <div class="flex items-center gap-2">
          <div
            class="w-8 h-8 rounded-full bg-gradient-to-br from-emerald-500 to-cyan-500 flex items-center justify-center text-white text-sm font-medium"
          >
            {post.data.author[0]}
          </div>
          <span class="text-slate-300">{post.data.author}</span>
        </div>
        <span>•</span>
        <time datetime={post.data.publishDate.toISOString()}>
          {formatDateString(post.data.publishDate)}
        </time>
        <span>•</span>
        <span>{readingTime(post.body || "")} min read</span>
      </div>
    </header>

    {
      post.data.featuredImage && (
        <div class="relative h-64 md:h-96 -mx-4 sm:mx-0 mb-8 overflow-hidden rounded-xl sm:rounded-2xl">
          <img
            src={post.data.featuredImage}
            alt={post.data.title}
            class="w-full h-full object-cover"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-slate-950/50 to-transparent" />
        </div>
      )
    }

    <div class="prose max-w-none">
      <Content />
    </div>

    <Fragment set:html={processContent("")} />

    {
      post.data.tags && post.data.tags.length > 0 && (
        <div class="flex flex-wrap gap-2 mt-8 pt-8 border-t border-slate-800">
          {post.data.tags.map((tag) => (
            <span class="px-3 py-1 rounded-full bg-slate-800 text-slate-400 text-sm">
              #{tag}
            </span>
          ))}
        </div>
      )
    }

    <div
      class="flex items-center justify-between mt-8 pt-8 border-t border-slate-800"
    >
      <a href="/blog" class="btn btn-secondary">
        <svg
          class="w-4 h-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Blog
      </a>

      <div class="flex items-center gap-2">
        <span class="text-sm text-slate-500">Share:</span>
        <button
          class="p-2 rounded-lg hover:bg-slate-800 text-slate-400 hover:text-slate-100 transition-colors"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"
            ></path>
          </svg>
        </button>
        <button
          class="p-2 rounded-lg hover:bg-slate-800 text-slate-400 hover:text-slate-100 transition-colors"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
            ></path>
          </svg>
        </button>
      </div>
    </div>
  </article>

  {
    relatedPosts.length > 0 && (
      <section class="max-w-4xl mx-auto px-4 sm:px-6 py-12">
        <h2 class="text-2xl font-bold text-slate-100 mb-6">Related Posts</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {relatedPosts.map((relatedPost) => (
            <a
              href={`/blog/${relatedPost.id}`}
              class="card group hover:border-emerald-500/30 transition-all"
            >
              <span class="px-2.5 py-1 rounded-full bg-emerald-500/10 text-emerald-400 text-xs font-medium">
                {relatedPost.data.category}
              </span>
              <h3 class="text-lg font-semibold text-slate-100 group-hover:text-emerald-400 transition-colors mt-3 mb-2">
                {relatedPost.data.title}
              </h3>
              <p class="text-slate-400 text-sm line-clamp-2">
                {relatedPost.data.description}
              </p>
            </a>
          ))}
        </div>
      </section>
    )
  }
</SiteLayout>
