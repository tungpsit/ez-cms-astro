---
import AdminLayout from '../../../layouts/AdminLayout.astro';
import { getCollection } from 'astro:content';

const { id } = Astro.params;
const pages = await getCollection('pages');
const page = pages.find(p => p.id === id);

if (!page) {
  return Astro.redirect('/admin/pages');
}
---

<AdminLayout title={`Edit: ${page.data.title}`}>
  <div class="space-y-6">
    <div class="flex items-center justify-between">
      <a href="/admin/pages" class="flex items-center gap-2 text-slate-400 hover:text-slate-100 transition-colors">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Back to Pages
      </a>
      <button 
        id="delete-btn"
        class="btn bg-red-500/10 text-red-400 hover:bg-red-500/20"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
        Delete
      </button>
    </div>

    <form id="page-form" class="grid grid-cols-1 lg:grid-cols-3 gap-6" data-id={id}>
      <div class="lg:col-span-2 space-y-6">
        <div class="card">
          <label class="block text-sm font-medium text-slate-300 mb-2">Title</label>
          <input 
            type="text" 
            name="title" 
            class="input w-full" 
            value={page.data.title}
            required
          />
        </div>

        <div class="card">
          <label class="block text-sm font-medium text-slate-300 mb-2">Description</label>
          <textarea 
            name="description" 
            class="input w-full" 
            rows="2"
          >{page.data.description}</textarea>
        </div>

        <div class="card">
          <label class="block text-sm font-medium text-slate-300 mb-2">Content</label>
          <textarea 
            name="content" 
            id="content-editor"
            class="input w-full font-mono" 
            rows="20"
            required
          >Loading...</textarea>
          <p class="text-xs text-slate-500 mt-2">Supports Markdown formatting</p>
        </div>
      </div>

      <div class="space-y-6">
        <div class="card">
          <h3 class="font-semibold text-slate-100 mb-4">Publish</h3>
          
          <div class="space-y-4">
            <div>
              <label class="flex items-center gap-3 cursor-pointer">
                <input 
                  type="checkbox" 
                  name="draft" 
                  class="w-4 h-4 rounded border-slate-600 bg-slate-800 text-emerald-500 focus:ring-emerald-500"
                  checked={page.data.draft}
                />
                <span class="text-sm text-slate-300">Save as draft</span>
              </label>
            </div>

            <button type="submit" class="btn btn-primary w-full">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Update Page
            </button>
          </div>
        </div>

        <div class="card">
          <h3 class="font-semibold text-slate-100 mb-4">Template</h3>
          <select name="template" class="input w-full">
            <option value="default" selected={page.data.template === 'default'}>Default</option>
            <option value="landing" selected={page.data.template === 'landing'}>Landing Page</option>
            <option value="contact" selected={page.data.template === 'contact'}>Contact</option>
            <option value="about" selected={page.data.template === 'about'}>About</option>
          </select>
        </div>

        <div class="card">
          <h3 class="font-semibold text-slate-100 mb-4">Featured Image</h3>
          <input 
            type="text" 
            name="featuredImage" 
            class="input w-full" 
            value={page.data.featuredImage || ''}
          />
        </div>
      </div>
    </form>
  </div>

  <div id="toast" class="fixed bottom-4 right-4 bg-emerald-500 text-white px-6 py-3 rounded-lg shadow-lg transform translate-y-20 opacity-0 transition-all duration-300">
    Page updated successfully!
  </div>

  <dialog id="delete-modal" class="bg-slate-900 rounded-xl p-6 border border-slate-800 backdrop:bg-slate-950/80">
    <h3 class="text-lg font-semibold text-slate-100 mb-2">Delete Page</h3>
    <p class="text-slate-400 mb-6">Are you sure you want to delete this page? This action cannot be undone.</p>
    <div class="flex gap-3 justify-end">
      <button id="cancel-delete" class="btn bg-slate-800 text-slate-300 hover:bg-slate-700">Cancel</button>
      <button id="confirm-delete" class="btn bg-red-500 text-white hover:bg-red-600">Delete</button>
    </div>
  </dialog>
</AdminLayout>

<script>
  const form = document.getElementById('page-form') as HTMLFormElement;
  const toast = document.getElementById('toast') as HTMLElement;
  const deleteBtn = document.getElementById('delete-btn') as HTMLButtonElement;
  const deleteModal = document.getElementById('delete-modal') as HTMLDialogElement;
  const cancelDelete = document.getElementById('cancel-delete') as HTMLButtonElement;
  const confirmDelete = document.getElementById('confirm-delete') as HTMLButtonElement;
  const contentEditor = document.getElementById('content-editor') as HTMLTextAreaElement;
  const pageId = form.dataset.id;
  
  async function loadContent() {
    try {
      const res = await fetch(`/api/pages/${pageId}`);
      const data = await res.json();
      if (data.content) {
        contentEditor.value = data.content;
      }
    } catch (err) {
      contentEditor.value = '';
    }
  }
  
  loadContent();
  
  function showToast(message: string, isError = false) {
    toast.textContent = message;
    toast.className = `fixed bottom-4 right-4 ${isError ? 'bg-red-500' : 'bg-emerald-500'} text-white px-6 py-3 rounded-lg shadow-lg transform translate-y-0 opacity-100 transition-all duration-300`;
    setTimeout(() => {
      toast.className = `fixed bottom-4 right-4 ${isError ? 'bg-red-500' : 'bg-emerald-500'} text-white px-6 py-3 rounded-lg shadow-lg transform translate-y-20 opacity-0 transition-all duration-300`;
    }, 3000);
  }
  
  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(form);
    
    const data = {
      title: formData.get('title'),
      description: formData.get('description'),
      content: formData.get('content'),
      template: formData.get('template'),
      draft: formData.get('draft') === 'on',
      featuredImage: formData.get('featuredImage'),
    };
    
    try {
      const res = await fetch(`/api/pages/${pageId}`, {
        method: 'PUT',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data),
      });
      
      const result = await res.json();
      
      if (result.success) {
        showToast('Page updated successfully!');
      } else {
        showToast(result.error || 'Failed to update page', true);
      }
    } catch (err) {
      showToast('An error occurred', true);
    }
  });
  
  deleteBtn.addEventListener('click', () => deleteModal.showModal());
  cancelDelete.addEventListener('click', () => deleteModal.close());
  
  confirmDelete.addEventListener('click', async () => {
    try {
      const res = await fetch(`/api/pages/${pageId}`, { method: 'DELETE' });
      const result = await res.json();
      
      if (result.success) {
        window.location.href = '/admin/pages';
      } else {
        showToast(result.error || 'Failed to delete page', true);
        deleteModal.close();
      }
    } catch (err) {
      showToast('An error occurred', true);
      deleteModal.close();
    }
  });
</script>
