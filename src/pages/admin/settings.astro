---
import AdminLayout from "../../layouts/AdminLayout.astro";
import { getConfig } from "../../lib/cms/config";
import { i18n } from "../../lib/i18n";

const config = getConfig();
const locales = await i18n.getLocales();
---

<AdminLayout title="Settings">
  <form id="settings-form" class="space-y-8 max-w-3xl">
    <div class="card">
      <h3 class="text-lg font-semibold text-slate-100 mb-6">
        General Settings
      </h3>

      <div class="space-y-6">
        <div>
          <label class="label">Site Name</label>
          <input
            type="text"
            name="siteName"
            class="input"
            value={config.siteName}
          />
        </div>

        <div>
          <label class="label">Site Description</label>
          <textarea name="siteDescription" class="input min-h-[100px]"
            >{config.siteDescription}</textarea
          >
        </div>

        <div>
          <label class="label">Site URL</label>
          <input
            type="url"
            name="siteUrl"
            class="input"
            value={config.siteUrl}
          />
        </div>

        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="label">Language</label>
            <select name="language" class="input">
              {
                locales.map((locale) => (
                  <option
                    value={locale.code}
                    selected={config.language === locale.code}
                  >
                    {locale.name}
                  </option>
                ))
              }
            </select>
          </div>
          <div>
            <label class="label">Timezone</label>
            <select name="timezone" class="input">
              <option value="UTC" selected={config.timezone === "UTC"}
                >UTC</option
              >
              <option
                value="America/New_York"
                selected={config.timezone === "America/New_York"}
                >America/New York</option
              >
              <option
                value="Europe/London"
                selected={config.timezone === "Europe/London"}
                >Europe/London</option
              >
              <option
                value="Asia/Ho_Chi_Minh"
                selected={config.timezone === "Asia/Ho_Chi_Minh"}
                >Asia/Ho Chi Minh</option
              >
            </select>
          </div>
        </div>

        <div>
          <label class="label">Posts Per Page</label>
          <input
            type="number"
            name="postsPerPage"
            class="input w-32"
            value={config.postsPerPage}
            min="1"
            max="50"
          />
        </div>
      </div>
    </div>

    <div class="card">
      <h3 class="text-lg font-semibold text-slate-100 mb-6">SEO Settings</h3>

      <div class="space-y-6">
        <div>
          <label class="label">Default Meta Title</label>
          <input
            type="text"
            name="seo.defaultMetaTitle"
            class="input"
            value={config.seo?.defaultMetaTitle || ""}
          />
          <p class="text-xs text-slate-500 mt-1">
            Used when pages don't have a custom title
          </p>
        </div>

        <div>
          <label class="label">Default Meta Description</label>
          <textarea name="seo.defaultMetaDescription" class="input min-h-[80px]"
            >{config.seo?.defaultMetaDescription || ""}</textarea
          >
        </div>

        <div>
          <label class="label">Google Analytics ID</label>
          <input
            type="text"
            name="seo.googleAnalyticsId"
            class="input"
            placeholder="G-XXXXXXXXXX"
            value={config.seo?.googleAnalyticsId || ""}
          />
        </div>
      </div>
    </div>

    <div class="card">
      <h3 class="text-lg font-semibold text-slate-100 mb-6">Social Links</h3>

      <div class="space-y-4">
        <div class="flex items-center gap-4">
          <div
            class="w-10 h-10 rounded-lg bg-slate-800 flex items-center justify-center flex-shrink-0"
          >
            <svg
              class="w-5 h-5 text-slate-400"
              fill="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"
              ></path>
            </svg>
          </div>
          <input
            type="url"
            name="social.twitter"
            class="input flex-1"
            placeholder="Twitter URL"
            value={config.social?.twitter || ""}
          />
        </div>

        <div class="flex items-center gap-4">
          <div
            class="w-10 h-10 rounded-lg bg-slate-800 flex items-center justify-center flex-shrink-0"
          >
            <svg
              class="w-5 h-5 text-slate-400"
              fill="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
              ></path>
            </svg>
          </div>
          <input
            type="url"
            name="social.github"
            class="input flex-1"
            placeholder="GitHub URL"
            value={config.social?.github || ""}
          />
        </div>

        <div class="flex items-center gap-4">
          <div
            class="w-10 h-10 rounded-lg bg-slate-800 flex items-center justify-center flex-shrink-0"
          >
            <svg
              class="w-5 h-5 text-slate-400"
              fill="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
              ></path>
            </svg>
          </div>
          <input
            type="url"
            name="social.linkedin"
            class="input flex-1"
            placeholder="LinkedIn URL"
            value={config.social?.linkedin || ""}
          />
        </div>
      </div>
    </div>

    <div class="flex justify-end gap-4">
      <button type="button" id="reset-btn" class="btn btn-secondary"
        >Reset</button
      >
      <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>
  </form>

  <div
    id="toast"
    class="fixed bottom-4 right-4 bg-emerald-500 text-white px-6 py-3 rounded-lg shadow-lg transform translate-y-20 opacity-0 transition-all duration-300"
  >
  </div>
</AdminLayout>

<script>
  const form = document.getElementById("settings-form") as HTMLFormElement;
  const toast = document.getElementById("toast") as HTMLElement;

  function showToast(message: string, isError = false) {
    toast.textContent = message;
    toast.className = `fixed bottom-4 right-4 ${isError ? "bg-red-500" : "bg-emerald-500"} text-white px-6 py-3 rounded-lg shadow-lg transform translate-y-0 opacity-100 transition-all duration-300`;
    setTimeout(() => {
      toast.className = `fixed bottom-4 right-4 ${isError ? "bg-red-500" : "bg-emerald-500"} text-white px-6 py-3 rounded-lg shadow-lg transform translate-y-20 opacity-0 transition-all duration-300`;
    }, 3000);
  }

  form.addEventListener("submit", async (e) => {
    e.preventDefault();

    const formData = new FormData(form);
    const data: Record<string, unknown> = {
      seo: {},
      social: {},
    };

    for (const [key, value] of formData.entries()) {
      if (key.startsWith("seo.")) {
        (data.seo as Record<string, unknown>)[key.replace("seo.", "")] = value;
      } else if (key.startsWith("social.")) {
        (data.social as Record<string, unknown>)[key.replace("social.", "")] =
          value;
      } else if (key === "postsPerPage") {
        data[key] = parseInt(value as string, 10);
      } else {
        data[key] = value;
      }
    }

    try {
      const res = await fetch("/api/settings", {
        method: "PUT",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(data),
      });

      const result = await res.json();

      if (result.success) {
        showToast("Settings saved!");
      } else {
        showToast(result.error || "Failed to save settings", true);
      }
    } catch (err) {
      showToast("An error occurred", true);
    }
  });

  document.getElementById("reset-btn")?.addEventListener("click", () => {
    if (confirm("Reset all settings to default values?")) {
      location.reload();
    }
  });
</script>
