---
import AdminLayout from '../../layouts/AdminLayout.astro';
import { getAllThemes, getActiveTheme } from '../../lib/cms/themes';

const themes = getAllThemes();
const activeTheme = getActiveTheme();

function getThemeSettings(theme: any): Record<string, string> {
  return theme.settings || {};
}
---

<AdminLayout title="Themes">
  <div class="space-y-6">
    <div>
      <p class="text-slate-400">Customize your site's appearance with themes</p>
    </div>

    <div id="themes-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {themes.map(theme => {
        const isActive = theme.id === activeTheme.id;
        const settings = getThemeSettings(theme);
        
        return (
          <div class={`card relative overflow-hidden ${isActive ? 'border-emerald-500/50 ring-1 ring-emerald-500/20' : ''}`} data-theme-id={theme.id}>
            {isActive && (
              <div class="active-badge absolute top-3 right-3 px-2.5 py-1 rounded-full bg-emerald-500/10 text-emerald-400 text-xs font-medium border border-emerald-500/20">
                Active
              </div>
            )}

            <div 
              class="h-32 -mx-6 -mt-6 mb-4 rounded-t-xl flex items-center justify-center relative overflow-hidden"
              style={`background-color: ${settings.backgroundColor}`}
            >
              <div class="absolute inset-0 opacity-20" style={`background: linear-gradient(135deg, ${settings.primaryColor}, ${settings.accentColor})`}></div>
              <div class="relative flex flex-col items-center gap-2">
                <div 
                  class="w-10 h-10 rounded-lg flex items-center justify-center"
                  style={`background-color: ${settings.primaryColor}`}
                >
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
                  </svg>
                </div>
                <span class="text-sm font-medium" style={`color: ${settings.textColor}`}>{theme.name}</span>
              </div>
            </div>

            <h3 class="text-lg font-semibold text-slate-100 mb-1">{theme.name}</h3>
            <p class="text-sm text-slate-400 mb-4">{theme.description}</p>

            <div class="flex items-center gap-2 mb-4">
              <span class="text-xs text-slate-500">Colors:</span>
              <div class="flex -space-x-1">
                <div class="w-5 h-5 rounded-full border-2 border-slate-900" style={`background-color: ${settings.primaryColor}`} title="Primary"></div>
                <div class="w-5 h-5 rounded-full border-2 border-slate-900" style={`background-color: ${settings.accentColor}`} title="Accent"></div>
                <div class="w-5 h-5 rounded-full border-2 border-slate-900" style={`background-color: ${settings.backgroundColor}`} title="Background"></div>
              </div>
            </div>

            <div class="flex items-center gap-2 text-xs text-slate-500 mb-4">
              <span>v{theme.version}</span>
              <span>â€¢</span>
              <span>By {theme.author}</span>
            </div>

            <div class="flex gap-2">
              {isActive ? (
                <button class="btn btn-secondary flex-1 cursor-default opacity-50" disabled>
                  Active
                </button>
              ) : (
                <button class="activate-btn btn btn-primary flex-1" data-theme-id={theme.id}>
                  Activate
                </button>
              )}
            </div>
          </div>
        );
      })}
    </div>

    <div class="card border-dashed border-slate-700 bg-transparent">
      <div class="text-center py-8">
        <div class="w-16 h-16 rounded-full bg-slate-800 flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-slate-100 mb-2">Create Custom Theme</h3>
        <p class="text-slate-400 mb-4 max-w-sm mx-auto">
          Build your own theme with custom colors, fonts, and styling
        </p>
        <button class="btn btn-secondary">
          Create Theme
        </button>
      </div>
    </div>
  </div>

  <div id="toast" class="fixed bottom-4 right-4 bg-emerald-500 text-white px-6 py-3 rounded-lg shadow-lg transform translate-y-20 opacity-0 transition-all duration-300"></div>
</AdminLayout>

<script>
  const toast = document.getElementById('toast') as HTMLElement;
  let currentActiveId = document.querySelector('[data-theme-id].border-emerald-500\\/50')?.getAttribute('data-theme-id') || '';

  function showToast(message: string, isError = false) {
    toast.textContent = message;
    toast.className = `fixed bottom-4 right-4 ${isError ? 'bg-red-500' : 'bg-emerald-500'} text-white px-6 py-3 rounded-lg shadow-lg transform translate-y-0 opacity-100 transition-all duration-300`;
    setTimeout(() => {
      toast.className = `fixed bottom-4 right-4 ${isError ? 'bg-red-500' : 'bg-emerald-500'} text-white px-6 py-3 rounded-lg shadow-lg transform translate-y-20 opacity-0 transition-all duration-300`;
    }, 3000);
  }

  document.querySelectorAll('.activate-btn').forEach(btn => {
    btn.addEventListener('click', async () => {
      const themeId = (btn as HTMLElement).dataset.themeId;
      if (!themeId) return;

      try {
        const res = await fetch('/api/themes', {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ themeId }),
        });
        
        const result = await res.json();
        
        if (result.success) {
          showToast('Theme activated!');
          setTimeout(() => location.reload(), 1000);
        } else {
          showToast(result.error || 'Failed to activate theme', true);
        }
      } catch (err) {
        showToast('An error occurred', true);
      }
    });
  });
</script>