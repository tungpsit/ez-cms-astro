---
import AdminLayout from '../../../layouts/AdminLayout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('posts');
const sortedPosts = posts.sort((a, b) => 
  new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime()
);
---

<AdminLayout title="Posts">
  <div class="space-y-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-slate-400">{posts.length} posts total</p>
      </div>
      <a href="/admin/posts/new" class="btn btn-primary">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
        New Post
      </a>
    </div>

    <div class="card overflow-hidden p-0">
      <table class="w-full">
        <thead>
          <tr class="border-b border-slate-800">
            <th class="text-left px-6 py-4 text-sm font-medium text-slate-400">Title</th>
            <th class="text-left px-6 py-4 text-sm font-medium text-slate-400">Category</th>
            <th class="text-left px-6 py-4 text-sm font-medium text-slate-400">Status</th>
            <th class="text-left px-6 py-4 text-sm font-medium text-slate-400">Date</th>
            <th class="text-right px-6 py-4 text-sm font-medium text-slate-400">Actions</th>
          </tr>
        </thead>
        <tbody>
          {sortedPosts.map(post => (
            <tr class="border-b border-slate-800/50 hover:bg-slate-800/30 transition-colors">
              <td class="px-6 py-4">
                <div>
                  <a href={`/admin/posts/${post.id}`} class="font-medium text-slate-100 hover:text-emerald-400 transition-colors">
                    {post.data.title}
                  </a>
                  {post.data.description && (
                    <p class="text-sm text-slate-500 line-clamp-1 mt-0.5">{post.data.description}</p>
                  )}
                </div>
              </td>
              <td class="px-6 py-4">
                <span class="px-2.5 py-1 rounded-full bg-slate-800 text-slate-300 text-xs font-medium">
                  {post.data.category}
                </span>
              </td>
              <td class="px-6 py-4">
                {post.data.draft ? (
                  <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full bg-amber-500/10 text-amber-400 text-xs font-medium">
                    <span class="w-1.5 h-1.5 rounded-full bg-amber-400"></span>
                    Draft
                  </span>
                ) : (
                  <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full bg-emerald-500/10 text-emerald-400 text-xs font-medium">
                    <span class="w-1.5 h-1.5 rounded-full bg-emerald-400"></span>
                    Published
                  </span>
                )}
              </td>
              <td class="px-6 py-4 text-sm text-slate-400">
                {new Date(post.data.publishDate).toLocaleDateString()}
              </td>
              <td class="px-6 py-4">
                <div class="flex items-center justify-end gap-2">
                  <a 
                    href={`/blog/${post.id}`}
                    target="_blank"
                    class="p-2 rounded-lg hover:bg-slate-800 text-slate-400 hover:text-slate-100 transition-colors"
                    title="View"
                  >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  </a>
                  <a 
                    href={`/admin/posts/${post.id}`}
                    class="p-2 rounded-lg hover:bg-slate-800 text-slate-400 hover:text-slate-100 transition-colors"
                    title="Edit"
                  >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                    </svg>
                  </a>
                </div>
              </td>
            </tr>
          ))}
        </tbody>
      </table>

      {posts.length === 0 && (
        <div class="text-center py-16">
          <div class="w-16 h-16 rounded-full bg-slate-800 flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-slate-100 mb-2">No posts yet</h3>
          <p class="text-slate-400 mb-4">Create your first post to get started</p>
          <a href="/admin/posts/new" class="btn btn-primary">Create Post</a>
        </div>
      )}
    </div>
  </div>
</AdminLayout>
