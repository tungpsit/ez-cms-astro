---
import AdminLayout from "../../../../layouts/AdminLayout.astro";
import { getDatabase } from "../../../../lib/cms/database";

const db = await getDatabase();
const menus = await db.getMenus();

// Parse items JSON for each menu
const menusWithItems = menus.map((menu) => ({
  ...menu,
  itemsParsed:
    typeof menu.items === "string"
      ? JSON.parse(menu.items || "[]")
      : menu.items,
}));
---

<AdminLayout title="Menus">
  <div class="space-y-6">
    <div class="flex items-center justify-between">
      <p class="text-slate-400">Manage your site's navigation menus</p>
      <button id="create-menu-btn" class="btn btn-primary">
        <svg
          class="w-5 h-5 mr-2"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
        </svg>
        Create Menu
      </button>
    </div>

    {
      menusWithItems.length === 0 ? (
        <div class="card text-center py-12">
          <div class="w-16 h-16 rounded-full bg-slate-800 flex items-center justify-center mx-auto mb-4">
            <svg
              class="w-8 h-8 text-slate-500"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16"
              />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-slate-100 mb-2">
            No menus yet
          </h3>
          <p class="text-slate-400 mb-6">
            Create your first navigation menu to get started
          </p>
          <div class="flex items-center justify-center gap-4">
            <button id="create-menu-empty-btn" class="btn btn-primary">
              Create Empty Menu
            </button>
            <button id="seed-default-menu-btn" class="btn btn-secondary">
              <svg
                class="w-5 h-5 mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 10V3L4 14h7v7l9-11h-7z"
                />
              </svg>
              Add Default Menu
            </button>
          </div>
        </div>
      ) : (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {menusWithItems.map((menu) => (
            <div class="card group" data-menu-id={menu.id}>
              <div class="flex items-start justify-between mb-4">
                <div>
                  <h3 class="text-lg font-semibold text-slate-100">
                    {menu.name}
                  </h3>
                  <p class="text-sm text-slate-500">
                    {menu.itemsParsed.length} items
                  </p>
                </div>
                <div class="flex gap-1 opacity-0 group-hover:opacity-100 transition-opacity">
                  <a
                    href={`/admin/appearance/menus/${menu.id}`}
                    class="p-2 rounded-lg text-slate-400 hover:text-slate-100 hover:bg-slate-800 transition-colors"
                    title="Edit"
                  >
                    <svg
                      class="w-4 h-4"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
                      />
                    </svg>
                  </a>
                  <button
                    class="delete-menu-btn p-2 rounded-lg text-slate-400 hover:text-red-400 hover:bg-slate-800 transition-colors"
                    data-menu-id={menu.id}
                    data-menu-name={menu.name}
                    title="Delete"
                  >
                    <svg
                      class="w-4 h-4"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                      />
                    </svg>
                  </button>
                </div>
              </div>

              <div class="space-y-2">
                {menu.itemsParsed
                  .slice(0, 5)
                  .map((item: any, index: number) => (
                    <div class="flex items-center gap-2 text-sm">
                      <svg
                        class="w-4 h-4 text-slate-500"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M13 7l5 5m0 0l-5 5m5-5H6"
                        />
                      </svg>
                      <span class="text-slate-300">{item.label}</span>
                      <span class="text-slate-500 text-xs truncate max-w-32">
                        {item.url}
                      </span>
                    </div>
                  ))}
                {menu.itemsParsed.length > 5 && (
                  <p class="text-xs text-slate-500 ml-6">
                    +{menu.itemsParsed.length - 5} more items
                  </p>
                )}
              </div>

              <div class="mt-4 pt-4 border-t border-slate-800">
                <a
                  href={`/admin/appearance/menus/${menu.id}`}
                  class="text-sm text-emerald-400 hover:text-emerald-300 transition-colors"
                >
                  Edit Menu â†’
                </a>
              </div>
            </div>
          ))}
        </div>
      )
    }
  </div>

  <!-- Create Menu Modal -->
  <div
    id="create-modal"
    class="fixed inset-0 bg-black/50 backdrop-blur-sm hidden items-center justify-center z-50"
  >
    <div
      class="bg-slate-900 border border-slate-800 rounded-xl p-6 w-full max-w-md mx-4"
    >
      <h2 class="text-xl font-semibold text-slate-100 mb-4">Create New Menu</h2>
      <form id="create-menu-form">
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-slate-300 mb-2"
              >Menu Name</label
            >
            <input
              type="text"
              id="menu-name"
              name="name"
              class="input w-full"
              placeholder="e.g., Main Navigation, Footer Menu"
              required
            />
          </div>
        </div>
        <div class="flex gap-3 mt-6">
          <button
            type="button"
            id="cancel-create-btn"
            class="btn btn-secondary flex-1">Cancel</button
          >
          <button type="submit" class="btn btn-primary flex-1"
            >Create Menu</button
          >
        </div>
      </form>
    </div>
  </div>

  <!-- Delete Confirmation Modal -->
  <div
    id="delete-modal"
    class="fixed inset-0 bg-black/50 backdrop-blur-sm hidden items-center justify-center z-50"
  >
    <div
      class="bg-slate-900 border border-slate-800 rounded-xl p-6 w-full max-w-md mx-4"
    >
      <h2 class="text-xl font-semibold text-slate-100 mb-2">Delete Menu</h2>
      <p class="text-slate-400 mb-4">
        Are you sure you want to delete "<span
          id="delete-menu-name"
          class="text-slate-200"></span>"? This action cannot be undone.
      </p>
      <div class="flex gap-3">
        <button id="cancel-delete-btn" class="btn btn-secondary flex-1"
          >Cancel</button
        >
        <button
          id="confirm-delete-btn"
          class="btn bg-red-600 hover:bg-red-700 text-white flex-1"
          >Delete</button
        >
      </div>
    </div>
  </div>

  <div
    id="toast"
    class="fixed bottom-4 right-4 bg-emerald-500 text-white px-6 py-3 rounded-lg shadow-lg transform translate-y-20 opacity-0 transition-all duration-300"
  >
  </div>
</AdminLayout>

<script>
  const createModal = document.getElementById("create-modal") as HTMLElement;
  const deleteModal = document.getElementById("delete-modal") as HTMLElement;
  const toast = document.getElementById("toast") as HTMLElement;
  let deleteMenuId: string | null = null;

  function showToast(message: string, isError = false) {
    toast.textContent = message;
    toast.className = `fixed bottom-4 right-4 ${isError ? "bg-red-500" : "bg-emerald-500"} text-white px-6 py-3 rounded-lg shadow-lg transform translate-y-0 opacity-100 transition-all duration-300`;
    setTimeout(() => {
      toast.className = `fixed bottom-4 right-4 ${isError ? "bg-red-500" : "bg-emerald-500"} text-white px-6 py-3 rounded-lg shadow-lg transform translate-y-20 opacity-0 transition-all duration-300`;
    }, 3000);
  }

  function openCreateModal() {
    createModal.classList.remove("hidden");
    createModal.classList.add("flex");
  }

  function closeCreateModal() {
    createModal.classList.add("hidden");
    createModal.classList.remove("flex");
    (document.getElementById("menu-name") as HTMLInputElement).value = "";
  }

  function openDeleteModal(id: string, name: string) {
    deleteMenuId = id;
    (document.getElementById("delete-menu-name") as HTMLElement).textContent =
      name;
    deleteModal.classList.remove("hidden");
    deleteModal.classList.add("flex");
  }

  function closeDeleteModal() {
    deleteMenuId = null;
    deleteModal.classList.add("hidden");
    deleteModal.classList.remove("flex");
  }

  // Create menu buttons
  document
    .getElementById("create-menu-btn")
    ?.addEventListener("click", openCreateModal);
  document
    .getElementById("create-menu-empty-btn")
    ?.addEventListener("click", openCreateModal);
  document
    .getElementById("cancel-create-btn")
    ?.addEventListener("click", closeCreateModal);

  // Seed default menu
  document
    .getElementById("seed-default-menu-btn")
    ?.addEventListener("click", async () => {
      const defaultItems = [
        { label: "Home", url: "/", target: "_self" },
        { label: "Blog", url: "/blog", target: "_self" },
        { label: "About", url: "/about", target: "_self" },
        { label: "Contact", url: "/contact", target: "_self" },
      ];

      try {
        const res = await fetch("/api/menus", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ name: "Main Menu", items: defaultItems }),
        });

        const result = await res.json();

        if (result.success) {
          showToast("Default menu created!");
          setTimeout(() => location.reload(), 500);
        } else {
          showToast(result.error || "Failed to create menu", true);
        }
      } catch (err) {
        showToast("An error occurred", true);
      }
    });

  // Create menu form
  document
    .getElementById("create-menu-form")
    ?.addEventListener("submit", async (e) => {
      e.preventDefault();
      const name = (
        document.getElementById("menu-name") as HTMLInputElement
      ).value.trim();

      if (!name) {
        showToast("Please enter a menu name", true);
        return;
      }

      try {
        const res = await fetch("/api/menus", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ name, items: [] }),
        });

        const result = await res.json();

        if (result.success) {
          showToast("Menu created!");
          setTimeout(
            () =>
              (window.location.href = `/admin/appearance/menus/${result.id}`),
            500,
          );
        } else {
          showToast(result.error || "Failed to create menu", true);
        }
      } catch (err) {
        showToast("An error occurred", true);
      }
    });

  // Delete menu buttons
  document.querySelectorAll(".delete-menu-btn").forEach((btn) => {
    btn.addEventListener("click", () => {
      const id = (btn as HTMLElement).dataset.menuId!;
      const name = (btn as HTMLElement).dataset.menuName!;
      openDeleteModal(id, name);
    });
  });

  document
    .getElementById("cancel-delete-btn")
    ?.addEventListener("click", closeDeleteModal);

  document
    .getElementById("confirm-delete-btn")
    ?.addEventListener("click", async () => {
      if (!deleteMenuId) return;

      try {
        const res = await fetch(`/api/menus/${deleteMenuId}`, {
          method: "DELETE",
        });

        const result = await res.json();

        if (result.success) {
          showToast("Menu deleted!");
          setTimeout(() => location.reload(), 500);
        } else {
          showToast(result.error || "Failed to delete menu", true);
        }
      } catch (err) {
        showToast("An error occurred", true);
      }

      closeDeleteModal();
    });

  // Close modals on backdrop click
  createModal.addEventListener("click", (e) => {
    if (e.target === createModal) closeCreateModal();
  });

  deleteModal.addEventListener("click", (e) => {
    if (e.target === deleteModal) closeDeleteModal();
  });
</script>
