---
import AdminLayout from '../../layouts/AdminLayout.astro';
import { getDatabase } from '../../lib/cms/database';

const db = await getDatabase();
const pages = await db.getPages();
---

<AdminLayout title="Pages">
  <div class="space-y-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-slate-400">{pages.length} pages total</p>
      </div>
      <a href="/admin/pages/new" class="btn btn-primary">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
        New Page
      </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      {pages.map(page => (
        <div class="card group hover:border-emerald-500/30 transition-all">
          <div class="flex items-start justify-between mb-3">
            <div class="w-10 h-10 rounded-lg bg-cyan-500/10 flex items-center justify-center">
              <svg class="w-5 h-5 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
            {page.draft ? (
              <span class="px-2 py-1 rounded-full bg-amber-500/10 text-amber-400 text-xs font-medium">
                Draft
              </span>
            ) : (
              <span class="px-2 py-1 rounded-full bg-emerald-500/10 text-emerald-400 text-xs font-medium">
                Published
              </span>
            )}
          </div>
          
          <h3 class="font-semibold text-slate-100 group-hover:text-emerald-400 transition-colors mb-1">
            {page.title}
          </h3>
          
          {page.description && (
            <p class="text-sm text-slate-400 line-clamp-2">{page.description}</p>
          )}
          
          <div class="flex items-center gap-2 mt-4 text-xs text-slate-500">
            <span>Template: {page.template}</span>
          </div>

          <div class="flex items-center gap-2 mt-4 pt-4 border-t border-slate-800">
            <a 
              href={`/admin/pages/${page.id}`}
              class="flex-1 flex items-center justify-center gap-2 px-3 py-2 bg-slate-800 text-slate-300 rounded-lg hover:bg-slate-700 transition-colors text-sm"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
              </svg>
              Edit
            </a>
            <a 
              href={`/admin/pages/builder/${page.id}`}
              class="flex-1 flex items-center justify-center gap-2 px-3 py-2 bg-emerald-500/10 text-emerald-400 rounded-lg hover:bg-emerald-500/20 transition-colors text-sm"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z" />
              </svg>
              Builder
            </a>
          </div>
        </div>
      ))}
    </div>

    {pages.length === 0 && (
      <div class="card text-center py-16">
        <div class="w-16 h-16 rounded-full bg-slate-800 flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-slate-100 mb-2">No pages yet</h3>
        <p class="text-slate-400 mb-4">Create your first page to get started</p>
        <a href="/admin/pages/new" class="btn btn-primary">Create Page</a>
      </div>
    )}
  </div>
</AdminLayout>