---
import AdminLayout from '../../../layouts/AdminLayout.astro';
import { FieldGroupEditor } from '../../../components/acf/FieldGroupEditor';
import { getFieldGroup } from '../../../lib/acf/store';

const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/admin/field-groups');
}

const fieldGroup = await getFieldGroup(id);

if (!fieldGroup) {
  return Astro.redirect('/admin/field-groups');
}
---

<AdminLayout title={`Edit: ${fieldGroup.title}`}>
  <div class="space-y-6">
    <div class="flex items-center gap-2 text-slate-400">
      <a href="/admin/field-groups" class="hover:text-slate-200">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
      </a>
      <span>Back to Field Groups</span>
    </div>

    <FieldGroupEditor client:load initialData={fieldGroup} isNew={false} />
  </div>
</AdminLayout>
