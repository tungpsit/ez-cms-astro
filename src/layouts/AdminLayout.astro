---
import BaseLayout from './BaseLayout.astro';
import AdminSidebar from '../components/admin/AdminSidebar.astro';

interface Props {
  title?: string;
}

const { title = 'Admin' } = Astro.props;
---

<BaseLayout title={`${title} - Admin`}>
  <div class="min-h-screen flex">
    <AdminSidebar />
    <div class="flex-1 ml-64">
      <header class="h-16 border-b border-slate-800 bg-slate-900/50 backdrop-blur-sm flex items-center px-6 sticky top-0 z-40">
        <h1 class="text-lg font-semibold text-slate-100">{title}</h1>
      </header>
      <main class="p-6">
        <slot />
      </main>
    </div>
  </div>
</BaseLayout>
